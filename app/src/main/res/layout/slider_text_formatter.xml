<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtFormatter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/dialog_slider_title"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFormatter"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_format_size_black_24px" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderFormatter"
        style="@style/MySliderStyle"
        android:layout_alignTop="@id/icTextSize"
        android:layout_alignEnd="@+id/icTextSize" />

</RelativeLayout>